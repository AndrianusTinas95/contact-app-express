<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Ubah data kontak</h2>
            <% if(typeof errors != 'undefined') {%>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %> </li>
                        <% }) %>
                    </ul>
                  </div>
            <% } %>
            <form action="/contact/update" method="post">
                <input type="hidden" name="oldNama" value="<%=(contact.oldNama) ? contact.oldNama : contact.nama %>">
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama</label>
                    <input type="text" class="form-control" id="nama" placeholder="nama" name="nama" value="<%= contact.nama %>" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="email" name="email" value="<%= contact.email %>" required>
                </div>
                <div class="mb-3">
                    <label for="noHP" class="form-label">no HP</label>
                    <input type="text" class="form-control" id="noHP" placeholder="noHP" name="noHP" value="<%= contact.noHP %>" required>
                </div>
                <button type="submit" class="btn btn-primary">Ubah Data Kontak</button>
            </form>

        </div>
    </div>
</div>